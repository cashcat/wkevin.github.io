#header
  position fixed
  width 100%
  height 44px
  line-height 44px
  text-align center
  background rgba(246, 246, 247, 0.9)
  border-bottom 1px solid rgb(182, 182, 184)

  a
    padding 5px 10px
    color black
    &:hover
      color color-link
      text-decoration none
    
  h1
    @media screen and (max-width: 900px)
      display none
    font-weight normal
    font-size 2.5em
    line-height 1
    text-align center

  h2
    @media screen and (max-width: 900px)
      display none
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    line-height 44px
    text-align center
    strong
      font-weight normal
      padding 5px 0
      @media screen and (max-width: 900px)
        &:hover
          border 1px solid color-link
          border-radius 5px

.sideWidth
  display inline-block
  width side-width
  text-align center
  border-right 1px solid rgb(198, 198, 200)

#title
  display inline-block
  text-align center
