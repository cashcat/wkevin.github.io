.tabbar
  display none
  @media screen and (max-width: 900px)
    display block
  position fixed
  bottom 0
  width 100%
  height 44px
  line-height 44px
  background-color rgba(255, 255, 255, 0.9)
  border-top 1px solid color-border
  padding 0
  .tabbaritem
    margin 0
    padding 0
    float left
    height 100%
    width 25%
    text-align center
    font-size 18px
    a
      color color-font
      &:hover
        color color-meta
        text-decoration none


